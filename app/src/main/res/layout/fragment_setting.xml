<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/person_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.administrator.hotnews.common.widget.RoundImageView
                android:id="@id/setting_header"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="请登录:"
                android:textColor="@color/SeniorBlackColor"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/iv_setting_weather_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/weather_duoyun" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@id/tv_setting_city"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="重庆"
                            android:textColor="@color/SeniorBlackColor"
                            android:textSize="12sp" />

                        <Button
                            android:id="@id/bt_setting_position"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/place_b" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/tv_setting_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="多云 13~20℃"
                        android:textColor="@color/SeniorBlackColor"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8abeb9" />

            <RelativeLayout
                android:id="@id/setting_update_information"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/person" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:text="完善信息"
                    android:textColor="@color/SeniorBlackColor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/change_info"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/right"
                    android:focusable="false" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#8abeb9" />

            <RelativeLayout
                android:id="@id/setting_find_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="修改密码"
                    android:textColor="@color/SeniorBlackColor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/find_pass"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/right"
                    android:focusable="false" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#8abeb9" />

            <RelativeLayout
                android:id="@id/setting_collection"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/heart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="我的收藏"
                    android:textColor="@color/SeniorBlackColor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/collection"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/right"
                    android:focusable="false" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#8abeb9" />

            <RelativeLayout
                android:id="@id/setting_font"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/font_b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="字体设置"
                    android:textColor="@color/SeniorBlackColor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/font_size"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/right"
                    android:focusable="false" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#8abeb9" />

            <RelativeLayout
                android:id="@id/setting_pic_mode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/np" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="无图模式"
                    android:textColor="@color/SeniorBlackColor"
                    android:textSize="15sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/noPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:textOff="关"
                    android:textOn="开" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#8abeb9" />

            <RelativeLayout
                android:id="@+id/setting_pic_light"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/np" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="夜间模式"
                    android:textColor="@color/SeniorBlackColor"
                    android:textSize="15sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:textOff="关"
                    android:textOn="开" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#8abeb9" />

            <RelativeLayout
                android:id="@id/setting_notification"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/message_b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="消息设置"
                    android:textColor="@color/SeniorBlackColor"
                    android:textSize="15sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/sendMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:textOff="关"
                    android:textOn="开" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#8abeb9" />

            <RelativeLayout
                android:id="@id/setting_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/clear_b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="清除缓存"
                    android:textColor="@color/SeniorBlackColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/clear_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="0M" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#8abeb9" />


            <RelativeLayout
                android:id="@id/setting_exit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/back_b" />

                <Button
                    android:id="@+id/exit_app"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:text="退出"
                    android:textColor="@color/SeniorBlackColor"
                    android:textSize="15sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#21274e" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>