<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4e90c6"
    >

    <android.support.v4.view.ViewPager
        android:id="@id/viewPager_userguide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@id/linearLayout_UserGuide"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_indicator1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1.0"
            android:background="@drawable/page_indicator_focused"
            />

        <ImageView
            android:id="@id/iv_indicator2"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1.0"
            android:background="@drawable/page_indicator"
            />

        <ImageView
            android:id="@id/iv_indicator3"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1.0"
            android:background="@drawable/page_indicator"
            />

    </LinearLayout>
</RelativeLayout>
