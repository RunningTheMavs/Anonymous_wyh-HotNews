<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_choose_position"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/city_bg"
    >

    <SearchView
        android:id="@id/sv_choose_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="请输入城市名称"
        android:background="#95aeb5"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@id/lv_choose_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="#95aeb5"
            android:scrollbars="none"
            android:dividerHeight="3px"
            android:visibility="gone"
            android:background="@drawable/bg"
            />

        <LinearLayout
            android:id="@+id/linearLayout_choose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:id="@+id/linearLayout_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已定位城市: "
                        android:textColor="@color/SeniorBlackColor"
                        android:textSize="18sp"
                        />

                    <Button
                        android:id="@id/bt_choose_city_location"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/frame_bg"
                        android:gravity="center"
                        android:text="定位中..."
                        android:textColor="@color/SeniorBlackColor"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="选择城市: "
                android:textColor="@color/SeniorBlackColor"
                android:textSize="18sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/frame_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="省份"
                        android:textColor="#2b2b2b"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginTop="2dp"
                        android:background="#95aeb5"/>

                    <ListView
                        android:id="@id/listView_province"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="#95aeb5"
                        android:dividerHeight="3px"
                        android:scrollbars="none"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/frame_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="城市"
                        android:textColor="#2b2b2b"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginTop="2dp"
                        android:background="#95aeb5"/>

                    <ListView
                        android:id="@id/listView_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="#95aeb5"
                        android:dividerHeight="3px"
                        android:scrollbars="none"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
